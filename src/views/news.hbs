<div class="container">
  <div class="row">
    <div id="newsResults">


      {{#each news }}
      <div class="row">
        <div class="col col-sm-12 col-md-9 col-lg-10">
          <div class="card medium hoverable">
            <div class="card-image">
              <img src="{{this.urlToImage}}" class="responsive-img">
            </div>
            <div class="card-content">
              <span class="card-title activator"><i class="material-icons right">More</i></span>
              <h6>{{this.title}}</h6>

              <div class="card-source">
                <p>Published on : {{this.publishedAt}}</p>
              </div>

              <div class="card-published">
                <p>{{this.source.name}}</p>
              </div>

            </div>

            <div class="card-reveal">
              <span class="card-title"><i class="material-icons right">Close</i></span>
              <p>{{this.description}}</p>
            </div>

            <div class="card-action">
              <a href="{{this.url}}" target="_blank" class="btn" style="background-color:#6796A5;">Read More</a>
            </div>

          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
<div id="loader">
  <div class="progress">
    <div class="indeterminate"></div>
  </div>
</div>
</div>
